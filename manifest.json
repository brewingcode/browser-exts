{
  "manifest_version": 2,
  "name": "CSS Grep",
  "browser_action": {
    "default_title": "CSS Grep",
    "default_icon": "inactive.png"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "version": "1.1.0",
  "description": "Greps a regex through DOM elements specified by a CSS selector"
}
