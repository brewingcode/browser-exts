{
  "name": "site-fixer",
  "version": "1.2.2",
  "description": "Fixes annoying things about various sites",
  "scripts": {
    "dev": "grunt dev",
    "build": "grunt build --prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": "https://github.com/brewingcode/browser-exts",
  "manifest": {
    "manifest_version": 3,
    "name": "Site Fixer",
    "action": {
      "default_title": "Site Fixer",
      "default_icon": "icon.png"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "background": {
      "service_worker": "main.js"
    },
    "commands": {
      "close-rightward-tabs": {
        "suggested_key": {
          "default": "Ctrl+Shift+Period",
          "mac": "Command+Shift+Period"
        },
        "description": "Shortcut for closing tabs to the right"
      }
    }
  },
  "devDependencies": {
    "coffeescript": "^2.6.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-coffee": "^2.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "load-grunt-tasks": "^5.1.0"
  },
  "dependencies": {
    "grunt": "^1.4.1"
  }
}
