{
  "name": "site-fixer",
  "version": "1.2.2",
  "description": "Fixes annoying things about various sites",
  "scripts": {
    "dev": "grunt dev",
    "build": "grunt build --prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": "https://github.com/brewingcode/browser-exts",
  "manifest": {
    "manifest_version": 2,
    "name": "Site Fixer",
    "browser_action": {
      "default_title": "Site Fixer",
      "default_icon": "icon.png"
    },
    "permissions": [
      "https://*.fandom.com/",
      "https://*.wikipedia.org/",
      "activeTab", "tabs"
    ],
    "background": {
      "scripts": [
        "main.js"
      ],
      "persistent": true
    }
  },
  "devDependencies": {
    "coffeescript": "^2.6.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-coffee": "^2.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "load-grunt-tasks": "^5.1.0"
  },
  "dependencies": {
    "grunt": "^1.4.1"
  }
}
