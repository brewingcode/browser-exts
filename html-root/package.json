{
  "name": "html-root",
  "version": "1.2.2",
  "description": "Copies <html> root to your clipboard",
  "scripts": {
    "dev": "grunt dev",
    "build": "grunt build --prod"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "repository": "https://github.com/brewingcode/browser-exts",
  "manifest": {
    "manifest_version": 3,
    "name": "HTML Root",
    "action": {
      "default_title": "Copy <html> to clipboard",
      "default_icon": "icon-white.png"
    },
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "background": {
      "service_worker": "main.js"
    },
    "commands": {
      "copy-html-root": {
        "suggested_key": {
          "default": "Ctrl+Shift+O",
          "mac": "Command+Shift+O"
        },
        "description": "Shortcut to copy <html> to clipboard"
      }
    }
  },
  "devDependencies": {
    "coffeescript": "^2.6.1",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-coffee": "^2.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-contrib-uglify": "^5.0.1",
    "grunt-contrib-watch": "^1.1.0",
    "load-grunt-tasks": "^5.1.0"
  },
  "dependencies": {
    "grunt": "^1.4.1"
  }
}
